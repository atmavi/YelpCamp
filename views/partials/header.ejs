  <link
    href="https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@100;300;700&family=Roboto:wght@100;300;700&display=swap"
    rel="stylesheet">

  <link rel="stylesheet" href="/stylesheets/main.css" />
  <link rel="stylesheet" href="/stylesheets/login-register.css" />
</head>

<body>

  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="/">
      <i class="fas fa-campground mr-2"></i>Yelp Camp
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
      aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav w-100 d-flex justify-content-end text-center">
        <% if(!currentUser){ %>
        <li class="ml-md-3 mb-sm-2"><a href="/login" class="text-dark">Login</a></li>
        <li class="ml-md-3 mb-sm-2">
          <a href="/register" class="text-dark">Sign Up</a>
        </li>
        <%} else {%>
        <li class="ml-md-3 mb-sm-2">
          <a href="#" class="text-dark"><span class="text-capitalize"><%=currentUser.username%></span></a>
        </li>
        <li class="ml-md-3 mb-sm-2">
          <a href="/logout" class="text-dark">Logout</a>
        </li>
        <%}%>
      </ul>
    </div>
  </nav>

